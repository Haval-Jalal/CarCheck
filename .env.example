# ===========================================
# CarCheck Environment Configuration
# ===========================================
# Copy this file to .env and fill in values.
# NEVER commit .env to version control.

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/carcheck
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# JWT Authentication
JWT_SECRET=your-jwt-secret-min-32-chars
JWT_ISSUER=carcheck-api
JWT_AUDIENCE=carcheck-client
JWT_ACCESS_TOKEN_EXPIRY_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRY_DAYS=7

# Redis (Caching)
REDIS_CONNECTION_STRING=localhost:6379

# Rate Limiting
RATE_LIMIT_DAILY_FREE=5
RATE_LIMIT_COOLDOWN_SECONDS=60

# CAPTCHA
CAPTCHA_SECRET_KEY=your-captcha-secret

# Email (for verification & password reset)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-email
SMTP_PASSWORD=your-password
SMTP_FROM=noreply@carcheck.com

# Environment
ASPNETCORE_ENVIRONMENT=Development
